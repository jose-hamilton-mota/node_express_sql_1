extends ./main

block content
    div.container.form-aling-top.col-md-8
            form(action="#", method="post")
                div.form-group
                    input.form-control(
                        type="text",
                        name="cliente",
                        id="cliente",
                        placeholder="Digite o nome do cliente",
                        required
                    )
                div.form-group
                    input.form-control(
                        type="text",
                        name="cnpj",
                        id="cnpj",
                        placeholder="Digite o cnpj do cliente",
                        required
                    )
                div.form-group
                    input.form-control(
                        type="text",
                        name="telefone",
                        id="telefone",
                        placeholder="Digite o telefone do cliente",
                        required
                    )
                div.form-group
                    input.form-control(
                        type="email",
                        name="email",
                        id="email",
                        placeholder="Digite o email do cliente",
                        required
                    )
                div.form-group
                    input.form-control(
                        type="text",
                        name="contao",
                        id="contato",
                        placeholder="Digite o contato do cliente",
                        required
                    )
                
                button.btn.btn-success.col-md-12(type="submit") Cadastrar